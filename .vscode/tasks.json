    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build in Linux",
            "type": "shell",
            "command": "make -j 8",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "Launch in Linux",
            "type": "shell",
            "command": "./build/bin/Bubblebobble_Termproject_28",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "test"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DISPLAY": ":1"
                }
            },
            "dependsOn": [
                "Build in Linux"
            ]
        },
        {
            "type": "script",
            "scriptType": "bash",
            "cmdLine": "./build.sh",
            "path": "",
            "fileName": "build.sh",
            "scriptFile": true,
            "requiresArgs": false,
            "uri": {
                "$mid": 1,
                "fsPath": "/home/homejh/projects/pp_termproj/build.sh",
                "path": "/home/homejh/projects/pp_termproj/build.sh",
                "scheme": "file"
            },
            "problemMatcher": []
        }
    ]
